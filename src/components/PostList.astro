---

<main class="container mx-auto px-4 py-12">
  <div class="max-w-3xl mx-auto">
    {
      sortedYears.map((year) => (
        <div class="mb-20">
          <h2 class="text-[120px] font-bold text-gray-900 mb-6">{year}</h2>
          <div class="space-y-6">
            {groupedPosts[year].map((post) => 
                (
              <article class="group">
                <a href=`/post/${getPostTitle(post)}` class="block">
                  <div class="flex flex-col">
                    <h3 class="text-xl font-medium group-hover:text-white transition-colors">
                      {getPostTitle(post)}
                    </h3>
                    <PostMetadata post={post} />
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      ))
    }
    </div>
  </div>
</main>
