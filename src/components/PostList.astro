---
export interface Props {
  posts: BlogEntry[]
}
import type { BlogEntry } from '../types'
import { getPublishDate, estimateReadingTime , getPostTitle, formatDate} from '../utils'
import PostMetadata from './PostMetadata.astro'

const { posts } = Astro.props

const groupedPosts = posts.reduce(
  (acc, post) => {
    const date = getPublishDate(post)
    if (!date) return acc
    const year = date.getFullYear()
    if (!acc[year]) {
      acc[year] = []
    }
    acc[year].push(post)
    return acc
  },
  {} as Record<number, BlogEntry[]>
)

const sortedYears = Object.keys(groupedPosts)
  .map(Number)
  .sort((a, b) => b - a)

